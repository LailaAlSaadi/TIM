<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Spinner
        android:entries="@array/country_arrays"
        android:tooltipText="@string/city_label"
        android:layout_margin="20dp"
        android:id="@+id/citySpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:entries="@array/routes_0"
        android:tooltipText="@string/route_label"
        android:layout_margin="20dp"
        android:id="@+id/routeSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <Button
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="#51e431"
            android:layout_marginTop="30dp"
            android:id="@+id/startTimer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/onBus" />

        <Button
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="#df3838"
            android:layout_marginTop="30dp"
            android:id="@+id/stopTimer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/offBus" />


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTimer"
            android:textSize="30dp"
            android:text="00:00:00"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>